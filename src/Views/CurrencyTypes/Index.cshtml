@model List<CurrencyType>
@{
    ViewData["Title"] = "Admin - Currency Types";
    ViewData["HeaderText"] = "Currency Types";
}

<p class="page-nav-container">
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="post">

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Abbreviation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Symbol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Sortorder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Active)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Defaultselection)
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
            <tr>

                <td>
                    <input type="hidden" asp-for="@Model[i].Id" />
                    <input class="form-control" asp-for="@Model[i].Name" />
                </td>
                <td>
                    <input class="form-control" asp-for="@Model[i].Abbreviation" />
                </td>
                <td>
                    <input class="form-control" asp-for="@Model[i].Symbol" />
                </td>
                <td>
                    <input class="form-control" asp-for="@Model[i].Sortorder" />
                </td>
                <td>
                    <input class="form-control" type="checkbox" asp-for="@Model[i].Active" />
                </td>
                <td>
                    <input class="form-control radio" type="radio" asp-for="@Model[i].Defaultselection" value="@Model[i].Defaultselection" />
                </td>
                <td>
                    <a class="delete" asp-action="Delete" asp-route-id="@Model[i].Id" title="Delete">&times;</a>
                </td>
            </tr>

            }
        </tbody>
    </table>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>

</form>

<div>
    <a asp-controller="Admin" asp-action="Index">Back to Admin</a>
</div>
