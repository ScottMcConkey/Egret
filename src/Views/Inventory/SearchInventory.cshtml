@model List<InventoryItem>
@{
    ViewBag.Title = "Inventory Search";
    ViewBag.Notice = "Inventory Search";
}

<table>
    <tr>
        <th>Code</th>
        <th>Description</th>
        <th>Buy Price</th>
        <th>Unit</th>
    </tr>
    @foreach (var entity in Model)
    {
        <tr>
            <td>@entity.Code</td>
            <td>@entity.Description</td>
            <td style="text-align: right;">@string.Format("{0:C}", entity.Buyingunitprice)</td>
            <td>@entity.Buyingunit</td>
        </tr>
    }
</table>
