@model PagingInfo

<div>
    Test @Model.TotalPages <br />
    Test @Model.TotalItems <br />
    Test @Model.CurrentPage <br />
    Test @Model.ItemsPerPage<br /><br />

    <ul class="pagination">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : null)"><a class="page-link" href="#">Previous</a></li>
        @for (int i = 0; i < Model.TotalPages; i++)
        {
            @if (Model.CurrentPage == (i + 1))
            {
                <li class="page-item active"><a class="page-link">@(i + 1)</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link">@(i + 1)</a></li>
            }
        }
        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : null)"><a class="page-link" href="#">Next</a></li>
    </ul>

    <br />

</div>
