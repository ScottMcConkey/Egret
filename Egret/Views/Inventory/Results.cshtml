@model List<InventoryItem>

@{
    ViewData["WindowTitle"] = "Inventory Search Results";
    ViewData["PageTitle"] = "Search Results";
}

<p class="page-nav-container">
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-condensed table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Buyprice)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr><td colspan="5" class="text-center">There is currently no Inventory.</td></tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr class="clickable-row" onclick="location.href = '@(Url.Action("Edit", new { id = item.Code }))'; location.target='_blank'">
                    <td>
                        <a class="test" asp-action="Edit" asp-route-id="@item.Code">
                            @Html.DisplayFor(modelItem => item.Code)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Buyprice)
                    </td>
                    <td>
                        <a class="delete" title="Delete" asp-action="Delete" asp-route-id="@item.Code">&times;</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-area="" asp-controller="Inventory" asp-action="Search">Return to Inventory Search</a>
</div>