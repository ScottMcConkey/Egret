@model List<Supplier>

@{
    Layout = "_CrudSingleColumn";
    ViewData["WindowTitle"] = "Suppliers";
    ViewData["PageTitle"] = "Suppliers";
}

<p class="page-nav-container">
    <span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;<a class="test" asp-action="Create">Create New</a>
</p>

<p class="page-nav-container">
    <span class="glyphicon glyphicon-th-list"></span>&nbsp;&nbsp;<a class="test" asp-action="Search">Search</a>
</p>


<form asp-action="Edit">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Name)
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <input type="text" asp-for="@Model[i].Name" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>

</form>