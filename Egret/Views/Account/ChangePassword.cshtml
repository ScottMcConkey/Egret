@model ChangePasswordModel

@{
    Layout = "_SingleColumnLayout";
    ViewData["WindowTitle"] = "Change Password";
    ViewData["PageTitle"] = "Change Password";
}

<form asp-action="ChangePassword">

    <div class="form-group">
        <label asp-for="CurrentPassword" class="required"></label>
        <input asp-for="CurrentPassword" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NewPassword" class="required"></label>
        <input asp-for="NewPassword" class="form-control" />
        <small class="form-text text-muted">Your password must be at least 6 characters in length.</small>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmNewPassword" class="required"></label>
        <input asp-for="ConfirmNewPassword" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>

</form>
