@model ConsumptionEvent

@{
    ViewData["WindowTitle"] = "Consumption Event - Create";
    ViewData["PageTitle"] = "Create Consumption Event";
}

<form asp-action="Create">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-8">
                <div class="col-md-6">
                    <div class="form-group">
                        @if (!String.IsNullOrEmpty(Context.Request.Query["sourceid"]))
                        {
                            <input asp-for="InventoryItemCode" type="hidden" name="InventoryItemCode" value="@Context.Request.Query["sourceid"]" />
                        }
                        <label asp-for="@Model.DateOfConsumption" class="control-label required"></label>
                        <input asp-for="@Model.DateOfConsumption" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ConsumedBy" class="control-label required"></label>
                        <input asp-for="@Model.ConsumedBy" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.SampleOrderNumber" class="control-label"></label>
                        <input asp-for="@Model.SampleOrderNumber" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ProductionOrderNumber" class="control-label"></label>
                        <input asp-for="@Model.ProductionOrderNumber" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.PatternNumber" class="control-label"></label>
                        <input asp-for="@Model.PatternNumber" class="form-control" />
                    </div>
                    <label asp-for="@Model.QuantityConsumed" class="control-label required"></label>
                    <div class="form-group form-inline">
                        <input asp-for="@Model.QuantityConsumed" class="form-control" />
                        <select asp-for="@Model.Unit" style="width: 25%;" class="form-control" asp-items="ViewBag.Unit">
                            <option value=""></option>
                        </select>
                    </div>

                </div>
            </div>


        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-8">
                <br />
                <input type="submit" value="Save and Return to Inventory" class="btn btn-primary" />
                <a asp-controller="Inventory" asp-action="Edit" asp-route-id="@Context.Request.Query["sourceid"]" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>

</form>

