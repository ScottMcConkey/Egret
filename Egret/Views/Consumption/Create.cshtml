@model ConsumptionEvent

@{
    ViewData["WindowTitle"] = "Consumption Event - Create";
    ViewData["PageTitle"] = "Create Consumption Event";
}

<form asp-action="Create">

    <div>
        @if (!String.IsNullOrEmpty(Context.Request.Query["inventoryid"]))
        {
            <input asp-for="InventoryItemCode" type="hidden" name="InventoryItem" value="@Context.Request.Query["inventoryid"]" />
        }
    </div>


    <div class="form-group">
        <label asp-for="@Model.QuantityConsumed" class="control-label"></label>
        <input asp-for="@Model.QuantityConsumed" class="form-control" />
        <span asp-validation-for="@Model.QuantityConsumed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.DateOfConsumption" class="control-label"></label>
        <input asp-for="@Model.DateOfConsumption" class="form-control" />
        <span asp-validation-for="@Model.DateOfConsumption" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.PatternNumber" class="control-label"></label>
        <input asp-for="@Model.PatternNumber" class="form-control" />
        <span asp-validation-for="@Model.PatternNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save and Return to Inventory</button>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-default">Cancel</a>

</form>

