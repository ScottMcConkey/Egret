@model ConsumptionEvent

@{
    ViewData["WindowTitle"] = "Consumption Event - Create";
    ViewData["PageTitle"] = "Create Consumption Event";
}

<form asp-action="Create">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-8">
                <div class="col-md-6">

                    <label class="contrl-label">Inventory Item</label>
                    <div style="border: 1px solid #000; padding: 10px;">
                        <label asp-for="@Model.InventoryItemCode" class="control-label"></label>
                        <div class="form-group form-inline">
                            <input asp-for="@Model.InventoryItemCode" class="form-control form-inline" />
                            <div class="btn btn-success"><span class="glyphicon glyphicon-refresh"></span></div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Description</label>
                            <p class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label class="control-label">Customer Reserved For</label>
                            <p class="form-control" readonly />
                        </div>

                    </div><br />

                    <div class="form-group">
                        <label asp-for="@Model.DateOfConsumption" class="control-label required"></label>
                        <input asp-for="@Model.DateOfConsumption" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.ConsumedBy" class="control-label required"></label>
                        <input asp-for="@Model.ConsumedBy" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.OrderNumber" class="control-label"></label>
                        <input asp-for="@Model.OrderNumber" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.PatternNumber" class="control-label"></label>
                        <input asp-for="@Model.PatternNumber" class="form-control" />
                    </div>

                    <label asp-for="@Model.QuantityConsumed" class="control-label required"></label>
                    <div class="form-group form-inline">
                        <input asp-for="@Model.QuantityConsumed" class="form-control" />
                        <select asp-for="@Model.Unit" style="width: 25%;" class="form-control" readonly asp-items="ViewBag.Unit">
                            <option value=""></option>
                        </select>
                    </div>

                </div>
            </div>


        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-8">
                <br />
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-controller="Items" asp-action="Edit" asp-route-id="@Context.Request.Query["sourceid"]" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>

</form>

