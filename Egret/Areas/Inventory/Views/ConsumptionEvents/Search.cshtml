@model ConsumptionEventSearchModel
@{
    Layout = "_SearchTemplate";
    ViewData["WindowTitle"] = "Consumption Event - Search";
    ViewData["PageTitle"] = "Search Consumption Events";
}

<form asp-action="Search">
    @if (!Html.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">@Html.ValidationSummary()</div>
    }

    <br />

    <div class="form-group">
        <label asp-for="Code" class="control-label"></label>
        <input asp-for="Code" class="form-control" />
    </div>

    <label class="control-label" asp-for="DateCreatedStart">Date Added</label>
    <div class="form-group">
        <div class="input-group">
            <input asp-for="DateCreatedStart" class="form-control" placeholder="Start Date" />
            <span class="input-group-addon">-</span>
            <input asp-for="DateCreatedEnd" class="form-control" placeholder="End Date" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ConsumedBy" class="control-label"></label>
        <input asp-for="ConsumedBy" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="OrderNumber" class="control-label"></label>
        <input asp-for="OrderNumber" class="form-control" />
    </div>

    <br />

    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-default" />
    </div>

</form>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Inventory</a>
</div>