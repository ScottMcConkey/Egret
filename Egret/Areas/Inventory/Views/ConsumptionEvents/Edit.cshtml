@model ConsumptionEventModel

@{
    Layout = "_DoubleColumnLayout";
    ViewData["WindowTitle"] = "Consumption Event - Edit";
    ViewData["PageTitle"] = "Edit Consumption Event: " + @Model.ConsumptionEvent.ConsumptionEventId;
}


<div class="row">

    <div class="col-md-8">

        <!-- Tab Links -->
        <ul class="nav nav-tabs">
            <li class="nav-item"><a id="details-tab" class="nav-link active" href="#details">Details</a></li>
        </ul>

        <br />

        <form asp-action="Edit">

            <!-- Details -->
            <div class="tab-content" id="tabContent">
                <div class="tab-pane fade show active" id="details" role="tabpanel" aria-labeledby="details-tab">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="ConsumptionEvent.ConsumptionEventId" include-languages="Nepali" class="control-label"></label>
                            <input asp-for="ConsumptionEvent.ConsumptionEventId" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="ConsumptionEvent.InventoryItemId" include-languages="Nepali" class="control-label required"></label>
                            <input style="float: right;" id="editCode" type="checkbox" name="Edit" value="Edit" /><label style="float: right; font-size: 9pt;">Edit&nbsp;</label>
                            <input asp-for="ConsumptionEvent.InventoryItemId" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="ConsumptionEvent.DateConsumed" include-languages="Nepali" class="control-label required"></label>
                            <input asp-for="ConsumptionEvent.DateConsumed" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="ConsumptionEvent.ConsumedBy" include-languages="Nepali" class="control-label required"></label>
                            <input asp-for="ConsumptionEvent.ConsumedBy" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="ConsumptionEvent.OrderNumber" include-languages="Nepali" class="control-label"></label>
                            <input asp-for="ConsumptionEvent.OrderNumber" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="ConsumptionEvent.PatternNumber" include-languages="Nepali" class="control-label"></label>
                            <input asp-for="ConsumptionEvent.PatternNumber" class="form-control" />
                        </div>

                        <label asp-for="ConsumptionEvent.QuantityConsumed" include-languages="Nepali" class="control-label required"></label>
                        <div class="form-group form-inline">
                            <input asp-for="ConsumptionEvent.QuantityConsumed" class="form-control mr-2 col-sm-4" />
                            <input asp-for="InventoryItems[0].UnitNavigation.Abbreviation" class="form-control col-sm-4" disabled />
                        </div>

                        <div class="form-group">
                            <label asp-for="ConsumptionEvent.Comments" include-languages="Nepali" class="control-label"></label>
                            <textarea asp-for="ConsumptionEvent.Comments" class="form-control"></textarea>
                        </div>

                        <div>
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
                        </div>

                        <br />

                    </div>
                </div>

            </div>

        </form>

    </div>

    <div class="col-md-4">

        @await Html.PartialAsync("_ObjectInformationWidget", Model.ConsumptionEvent)

        @await Html.PartialAsync("_DeleteWidget", new ConsumptionEventDeleteViewModel(Model.ConsumptionEvent.ConsumptionEventId))

        @await Html.PartialAsync("_RelatedObjectsWidget", new RelationshipViewModelInventory((List<InventoryItem>)Model.InventoryItems))

    </div>

    @section Scripts {
        AllowEditCode();
    }

</div>


