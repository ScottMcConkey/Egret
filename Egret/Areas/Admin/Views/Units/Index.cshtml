@model List<Unit>
@{
    Layout = "_FullPageLayout";
    ViewData["WindowTitle"] = "Admin - Units";
    ViewData["PageTitle"] = "Units";
}

<p class="index-page-link">
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index">

    <table class="table table-condensed table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Abbreviation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].SortOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Active)
                </th>
                <th><!-- Delete Button --></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="5" class="text-center">There are currently no Units.</td></tr>
            }
            else
            {
                for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="@Model[i].Id" />
                            <input asp-for="@Model[i].Name" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@Model[i].Abbreviation" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@Model[i].SortOrder" class="form-control" />
                        </td>
                        <td class="text-center">
                            <input type="checkbox" asp-for="@Model[i].Active" class="form-control-sm" />
                        </td>
                        <td class="delete-box">
                            <a class="delete" asp-action="Delete" asp-route-id="@Model[i].Id" title="Delete"><span class="egret egret-trash"></span></a>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>

</form>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Admin</a>
</div>
