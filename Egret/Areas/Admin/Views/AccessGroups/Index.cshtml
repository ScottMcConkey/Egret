@model List<AccessGroup>

@{
    Layout = "_CrudFullPage";
    ViewData["WindowTitle"] = "Admin - Access Groups";
    ViewData["PageTitle"] = "Access Groups";
}

<p class="index-page-link">
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index">

    <table class="table table-condensed table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model[0].Name)</th>
                <th>@Html.DisplayNameFor(model => model[0].Description)</th>
                <th>Permissions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count() == 0)
            {
                <tr><td colspan="4" class="text-center">There are currently no Access Groups.</td></tr>
            }
            else
            {
                for (int i = 0; i < Model?.Count(); i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="@Model[i].Id" />
                            <input class="form-control" asp-for="@Model[i].Name" />
                        </td>
                        <td>
                            <input class="form-control" asp-for="@Model[i].Description" />
                        </td>
                        <td>
                            <a class="btn btn-secondary" asp-action="EditPermissions" asp-route-id="@Model[i].Id">Configure</a>
                        </td>
                        <td class="delete-box">
                            <a class="delete" asp-action="Delete" asp-route-id="@Model[i].Id" title="Delete"><span class="egret egret-trash"></span></a>
                            @*<button name="action" value="delete" class="delete" asp-action="Delete" asp-route-id="@Model[i].Id" title="Delete">
                                <span class="egret egret-trash"></span>
                            </button>*@
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        @*<button name="action" value="save" class="btn btn-primary">Save</button>*@
    </div>

</form>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Admin</a>
</div>