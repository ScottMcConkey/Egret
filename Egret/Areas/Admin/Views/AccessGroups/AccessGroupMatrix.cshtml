@model AccessGroupViewModel

@{
    ViewData["WindowTitle"] = "Access Group Security";
    ViewData["PageTitle"] = "Access Group Security - ";
}

<form asp-action="AccessGroupMatrix">

    <table class="table table-condensed table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>Create</th>
                <th>Read</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Roles.Count() == 0)
            {
                <tr><td colspan="2" class="text-center">There are currently no Access Groups.</td></tr>
            }
            else
            {
                for (int i = 0; i < Model.Roles.Count(); i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="@Model.Roles[i].Id" />
                            <input asp-for="@Model.Roles[i].Name" class="form-control" />
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>

</form>

