@model AccessGroupPermissionsModel

@{
    Layout = "_SingleColumnLayout";
    ViewData["WindowTitle"] = "Access Group Security";
    ViewData["PageTitle"] = $"Access Group Security - {Model.AccessGroup.Name}";
}

<form asp-action="Edit">

    <table class="table table-condensed table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Roles.Count(); i++)
            {
                <tr>
                    <td>
                        @Model.Roles[i].DisplayName
                    </td>
                    <td class="text-center">
                        <input type="hidden" asp-for="@Model.Roles[i].Id" />
                        <input asp-for="@Model.Roles[i].RelationshipPresent" type="checkbox" class="checkbox" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <input asp-route-id="@Model.AccessGroup.Id" type="submit" value="Save" class="btn btn-primary" />
    </div>

</form>

<div>
    <a asp-controller="AccessGroups" asp-action="Index">Back to Access Groups</a>
</div>

