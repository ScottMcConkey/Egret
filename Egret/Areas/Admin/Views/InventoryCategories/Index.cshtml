@model List<InventoryCategory>

@{
    ViewData["WindowTitle"] = "Admin - Inventory Categories";
    ViewData["PageTitle"] = "Inventory Categories";
}

<p class="page-nav-container">
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index">

    <table class="table table-condensed table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].SortOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Active)
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="4" class="text-center">There are currently no Roles.</td></tr>
            }
            else
            {
                for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="@Model[i].Id" />
                            <input asp-for="@Model[i].Name" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@Model[i].Description" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@Model[i].SortOrder" class="form-control" />
                        </td>
                        <td>
                            <input type="checkbox" asp-for="@Model[i].Active" class="form-control" />
                        </td>
                        <td style="text-align: center;">
                            <a asp-action="Delete" asp-route-id="@Model[i].Id" style="color: red; font-size: 25px; font-weight: bold; text-decoration: none;" title="Delete">&times;</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>

</form>

<div>
    <a asp-area="Admin" asp-controller="Home" asp-action="Index">Back to Admin</a>
</div>