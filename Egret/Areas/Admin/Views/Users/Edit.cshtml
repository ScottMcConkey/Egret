@model User

@{
    Layout = "_SingleColumnLayout";
    ViewData["WindowTitle"] = "User - Edit";
    ViewData["PageTitle"] = "Edit User";
}

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input name="password" class="form-control" />
        <small class="form-text text-muted">Passwords must be at least 6 characters in length.</small>
    </div>

    <div class="form-group">
        <label asp-for="Active" style="display: block;"></label>
        <input asp-for="Active" type="checkbox" class="form-control-sm" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-default">Cancel</a>
</form>