@model  UserGroupViewModel

@{
    ViewData["WindowTitle"] = "User Access Groups - Edit";
    ViewData["PageTitle"] = $"Edit Access Groups - {Model?.UserName}";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="EditAccessGroups" method="post">
    <table class="table table-condensed table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.AccessGroups.Count() == 0)
            {
                <tr><td colspan="2" class="text-center">There are currently no Access Groups.</td></tr>
            }
            else
            {
                for (int i = 0; i < Model?.AccessGroups.Count(); i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="@Model.AccessGroups[i].Id" />
                            <input asp-for="@Model.AccessGroups[i].Name" class="form-control" />
                        </td>
                        <td>
                            <input asp-for="@Model.AccessGroups[i].FlagForAddition" type="checkbox" class="form-control" />
                        </td>
                        <td class="delete-box">
                            <a class="delete" asp-action="Delete" asp-route-id="@Model.AccessGroups[i].Id" title="Delete"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>

<div>
    <a asp-area="Admin" asp-controller="Users" asp-action="Index">Back to Users</a>
</div>

