@model IEnumerable<AppUser>
@{
    ViewData["WindowTitle"] = "Admin - Users";
    ViewData["PageTitle"] = "Users";
}

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<p class="page-nav-container">
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-condensed table-bordered">
    <thead>
        <tr>
            <th>
                ID @* @Html.DisplayNameFor(model => model[0].Id) *@
            </th>
            <th>
                User Name@* @Html.DisplayNameFor(model => model[0].UserName) *@
            </th>
            <th>
                Email @* @Html.DisplayNameFor(model => model[0].Email) *@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
        }
        else
        {
            foreach (AppUser user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-area="Admin" asp-controller="Home" asp-action="Index">@ViewData["BackText"]</a>
</div>
