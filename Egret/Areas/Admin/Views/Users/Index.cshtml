@model List<User>
@{
    ViewData["WindowTitle"] = "Admin - Users";
    ViewData["PageTitle"] = "Users";
}

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<p class="page-link">
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-condensed table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].Id)</th>
            <th>@Html.DisplayNameFor(model => model[0].UserName)</th>
            <th>@Html.DisplayNameFor(model => model[0].Email)</th>
            <th>@Html.DisplayNameFor(model => model[0].IsActive)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="5" class="text-center">No User Accounts</td></tr>
        }
        else
        {
            foreach (User user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <input type="checkbox" asp-for="@user.IsActive" class="form-control" disabled="disabled" />
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-area="Admin" asp-controller="Home" asp-action="Index">Back to Admin</a>
</div>
