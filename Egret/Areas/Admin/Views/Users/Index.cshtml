@model List<User>
@{
    Layout = "_CrudFullPage";
    ViewData["WindowTitle"] = "Admin - Users";
    ViewData["PageTitle"] = "Users";
}

<p class="index-page-link">
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-condensed table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].Id)</th>
            <th>@Html.DisplayNameFor(model => model[0].UserName)</th>
            <th>@Html.DisplayNameFor(model => model[0].Email)</th>
            <th>@Html.DisplayNameFor(model => model[0].IsActive)</th>
            <th>Access Groups</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="5" class="text-center">No User Accounts</td></tr>
        }
        else
        {
            for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].UserName</td>
                    <td>@Model[i].Email</td>
                    <td>
                        <input type="checkbox" asp-for="@Model[i].IsActive" class="form-control" disabled="disabled" />
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-route-id="@Model[i].Id" asp-action="EditAccessGroups">Configure</a>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@Model[i].Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a>
                            <a type="submit" class="btn btn-sm btn-danger">Delete</a>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Admin</a>
</div>
