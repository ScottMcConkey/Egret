@model List<Role>
@{
    Layout = "_CrudSingleColumn";
    ViewData["WindowTitle"] = "Admin - User Roles";
    ViewData["PageTitle"] = "User Roles";
}

<p class="alert alert-warning">Roles are not editable by system users. This page is for informational purposes only.</p>

<table class="table table-condensed table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].Name)</th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="1" class="text-center">This user currently has no Roles.</td></tr>
        }
        else
        {
            for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <p class="form-control">@Model[i].Name</p>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-controller="Users" asp-action="Index">Back to Users</a>
</div>