@model List<Role>
@{
    Layout = "_SingleColumnLayout";
    ViewData["WindowTitle"] = "Admin - Roles";
    ViewData["PageTitle"] = "Roles";
}

<form asp-action="Index">

    <p class="alert alert-warning">Roles are not editable by system users. This page is for informational purposes only.</p>

    <table class="table table-condensed table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model[0].Name)</th>
            </tr>
        </thead>

        <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="1" class="text-center">There are currently no Roles.</td></tr>
            }
            else
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            <p class="form-control">@Model[i].DisplayName</p>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</form>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Admin</a>
</div>


